<h1>Список отделов</h1>
<%= title "Список отделов" %>
<div id="sidebar">Перейти в таблицу:    <a href="/devices">Устройства</a>
<a href="/sotrudnikis">   Сотрудники</a></div>
<table>
  <tr>
    <th>Название</th>
    <th>Абревиатура</th>
    <th>Начальник</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.name %></td>
    <td><%= department.short_name %></td>
    <td><%= department.manager %></td>
    <td><%= link_to 'Посмотреть', department %></td>
    <td><%= link_to 'Редактировать', edit_department_path(department) %></td>
    <td><%= link_to 'Удалить', department, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

